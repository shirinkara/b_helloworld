            <Label Content=" Breite:" Margin="10,60,0,0"/>
        </StackPanel>
        <TextBox  x:Name="za_txt"    HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="90,133,0,0"/>
        <TextBox    x:Name="td_txt"       HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="153,225,0,0"/>
        <TextBox   x:Name="bb_txt"                HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="72,310,0,0"/>
        <TextBox    x:Name="md_txt"             HorizontalAlignment="Left" Height="23" TextWrapping="Wrap" VerticalAlignment="Top" Width="120" Margin="72,66,0,0"/>
        <StackPanel HorizontalAlignment="Left" Height="271" Margin="412,62,0,0" VerticalAlignment="Top" Width="343"/>

        <Button x:Name="bt_1"      Content="Berechnen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="139" Margin="561,362,0,0" FontSize="20" Click="bt_1_Click" RenderTransformOrigin="0.683,0.345"/>

        <Image Margin="455,83,84,137" Source="images.png.jpg" Stretch="Fill"/>
        <Button  x:Name="bt_2"    Content="offen" HorizontalAlignment="Left" VerticalAlignment="Top" Width="106" Margin="365,364,0,0" RenderTransformOrigin="0.693,2.526" Height="27" Click="bt_2_Click"/>
        <Button HorizontalAlignment="Left" VerticalAlignment="Top" Width="75"/>
        <Button  x:Name="bt_3"    Content="senden" HorizontalAlignment="Left" Margin="481,370,0,0" VerticalAlignment="Top" Width="75" Click="bt_3_Click"/>









    </Grid>
</Window>
